    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/151df094-75de-4a38-83df-8e415e86cf7b_setup-gear-3.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Images/151df094-75de-4a38-83df-8e415e86cf7b_setup-gear-3.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Images/a7de4b88-d6b3-4ff0-bf1e-a48ece62039a_black-18.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <section id="product1" class="container py-5">
        <h1 class="text-center mb-3">Most Selling</h1>
        <p class="text-center text-muted mb-4">A new collection for summer Modern design</p>
        <div class="row justify-content-center">

            @foreach (var obj in Model.Products)
            {
                if (obj.Description.Contains("mostselling"))
                {
                    <div class="col-12 col-sm-6 col-lg-3 d-flex">
                        <div class="pro card w-100 border-0 shadow">
                            <img src="@obj.Image" class="card-img-top" alt="">
                            <div class="card-body">

                                <h5 class="card-title mt-2">@obj.Name</h5>
                                <div class="stars text-warning mb-2">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fa-light fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <h4 class="text-success">@obj.Price</h4>
                            </div>
                            <a asp-page="/Products/ProductView" asp-route-id="@obj.Id" class="cart-btn">
                                <i class="fa-solid fa-cart-shopping"></i>
                            </a>
                            @*<a asp-page="ProductView" asp-route-id="@obj.Id" class="btn btn-outline-primary mt-3 w-100">View Details</a>*@
                        </div>
                    </div>
                }

            }


        </div>
    </section>


