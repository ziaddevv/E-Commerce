@page "About"
@model E_Commerce.Pages.Products.ContentModel
@{
}

<section id="about-us" class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="fw-bold">About Us</h2>
                <p class="mt-4 text-secondary fs-5">
                    Welcome to E-Commerce, your trusted destination for premium products and unmatched value. Our mission is to bring you a seamless online shopping experience, combining quality, affordability, and convenience in every purchase.
                </p>
                <p class="mt-3 text-secondary fs-5">
                    Founded with a vision to redefine online retail, we pride ourselves on offering an extensive range of items, from fashion essentials to everyday accessories, all curated to meet your needs.
                </p>
                <p class="mt-3 text-secondary fs-5">
                    We are committed to excellent customer service, providing free shipping, secure payment options, and a 30-day money-back guarantee to ensure your satisfaction.
                </p>
            </div>
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <img src="/Images/About Us/2672335.jpg" class="img-fluid rounded shadow-sm" alt="About Us">
            </div>
        </div>
    </div>
</section>

<section id="our-values" class="bg-light py-5">
    <div class="container">
        <h3 class="text-center mb-4">Our Core Values</h3>
        <div class="row text-center">
            <div class="col-md-4">
                <i class="bi bi-heart text-primary fs-1 mb-3"></i>
                <h5>Customer Focus</h5>
                <p class="text-secondary">Your satisfaction is our priority. We strive to exceed expectations every step of the way.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-shield-check text-success fs-1 mb-3"></i>
                <h5>Integrity</h5>
                <p class="text-secondary">We are transparent and trustworthy, ensuring every transaction is secure and ethical.</p>
            </div>
            <div class="col-md-4">
                <i class="bi bi-lightbulb text-warning fs-1 mb-3"></i>
                <h5>Innovation</h5>
                <p class="text-secondary">We continuously improve our platform and offerings to bring you the best shopping experience.</p>
            </div>
        </div>
    </div>
</section>

